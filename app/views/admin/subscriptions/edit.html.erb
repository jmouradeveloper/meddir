<div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 py-8">
  <div class="max-w-2xl mx-auto px-4">
    <div class="mb-8">
      <%= link_to admin_subscriptions_path, class: "inline-flex items-center gap-2 text-slate-400 hover:text-white transition-colors mb-4" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        <%= t("admin.subscriptions.back_to_list") %>
      <% end %>
      
      <h1 class="text-3xl font-bold text-white"><%= t("admin.subscriptions.edit_title") %></h1>
      <p class="text-slate-400 mt-2"><%= @user.display_name %> (<%= @user.email_address %>)</p>
    </div>

    <div class="bg-slate-800/50 backdrop-blur-sm rounded-2xl border border-slate-700/50 p-6">
      <%= form_with model: @subscription, url: admin_subscription_path(@user), method: :patch, class: "space-y-6" do |form| %>
        
        <div>
          <label class="block text-sm font-medium text-slate-300 mb-2"><%= t("admin.subscriptions.select_plan") %></label>
          <div class="space-y-3">
            <label class="flex items-center gap-4 p-4 rounded-xl border border-slate-600 hover:border-emerald-500/50 cursor-pointer transition-colors has-[:checked]:border-emerald-500 has-[:checked]:bg-emerald-500/10">
              <%= form.radio_button :plan_id, "", checked: @subscription.plan_id.nil?, class: "w-4 h-4 text-emerald-500" %>
              <div class="flex-1">
                <span class="text-white font-medium"><%= t("admin.subscriptions.no_subscription") %></span>
                <p class="text-slate-400 text-sm"><%= t("admin.subscriptions.free_plan_description") %></p>
              </div>
            </label>
            
            <% @plans.reject(&:free?).each do |plan| %>
              <label class="flex items-center gap-4 p-4 rounded-xl border border-slate-600 hover:border-emerald-500/50 cursor-pointer transition-colors has-[:checked]:border-emerald-500 has-[:checked]:bg-emerald-500/10">
                <%= form.radio_button :plan_id, plan.id, checked: @subscription.plan_id == plan.id, class: "w-4 h-4 text-emerald-500" %>
                <div class="flex-1">
                  <span class="text-white font-medium"><%= plan.name %></span>
                  <p class="text-slate-400 text-sm">
                    R$ <%= number_with_precision(plan.monthly_price, precision: 2) %>/mÃªs
                    ou R$ <%= number_with_precision(plan.annual_price, precision: 2) %>/ano
                  </p>
                </div>
              </label>
            <% end %>
          </div>
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-slate-300 mb-2"><%= t("admin.subscriptions.billing_cycle") %></label>
            <%= form.select :billing_cycle, 
                options_for_select([["Mensal", "monthly"], ["Anual", "annual"]], @subscription.billing_cycle),
                {}, class: "w-full bg-slate-700 border border-slate-600 rounded-xl px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500" %>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-slate-300 mb-2"><%= t("admin.subscriptions.status") %></label>
            <%= form.select :status, 
                options_for_select([["Ativo", "active"], ["Cancelado", "cancelled"], ["Expirado", "expired"]], @subscription.status),
                {}, class: "w-full bg-slate-700 border border-slate-600 rounded-xl px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500" %>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-slate-300 mb-2"><%= t("admin.subscriptions.expires_at") %></label>
          <%= form.datetime_local_field :ends_at, value: @subscription.ends_at&.strftime("%Y-%m-%dT%H:%M"),
              class: "w-full bg-slate-700 border border-slate-600 rounded-xl px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500" %>
        </div>

        <div>
          <label class="block text-sm font-medium text-slate-300 mb-2"><%= t("admin.subscriptions.notes") %></label>
          <%= form.text_area :notes, rows: 3, placeholder: t("admin.subscriptions.notes_placeholder"),
              class: "w-full bg-slate-700 border border-slate-600 rounded-xl px-4 py-3 text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-emerald-500" %>
        </div>

        <div class="flex items-center justify-between pt-4 border-t border-slate-700">
          <%= link_to t("common.cancel"), admin_subscriptions_path, class: "px-6 py-3 text-slate-400 hover:text-white transition-colors" %>
          <%= form.submit t("common.save"), class: "px-6 py-3 bg-gradient-to-r from-emerald-500 to-teal-500 hover:from-emerald-600 hover:to-teal-600 text-white font-semibold rounded-xl shadow-lg cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
