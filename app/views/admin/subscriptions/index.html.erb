<div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 py-8">
  <div class="max-w-6xl mx-auto px-4">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-white"><%= t("admin.subscriptions.title") %></h1>
      <p class="text-slate-400 mt-2"><%= t("admin.subscriptions.description") %></p>
    </div>

    <div class="bg-slate-800/50 backdrop-blur-sm rounded-2xl border border-slate-700/50 overflow-hidden">
      <table class="w-full">
        <thead>
          <tr class="border-b border-slate-700/50">
            <th class="px-6 py-4 text-left text-sm font-medium text-slate-300"><%= t("admin.subscriptions.user") %></th>
            <th class="px-6 py-4 text-left text-sm font-medium text-slate-300"><%= t("admin.subscriptions.plan") %></th>
            <th class="px-6 py-4 text-left text-sm font-medium text-slate-300"><%= t("admin.subscriptions.status") %></th>
            <th class="px-6 py-4 text-left text-sm font-medium text-slate-300"><%= t("admin.subscriptions.billing") %></th>
            <th class="px-6 py-4 text-left text-sm font-medium text-slate-300"><%= t("admin.subscriptions.expires") %></th>
            <th class="px-6 py-4 text-right text-sm font-medium text-slate-300"><%= t("admin.subscriptions.actions") %></th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-700/50">
          <% @users.each do |user| %>
            <tr class="hover:bg-slate-700/30 transition-colors">
              <td class="px-6 py-4">
                <div class="flex items-center gap-3">
                  <div class="w-10 h-10 rounded-full bg-gradient-to-br from-emerald-500 to-teal-600 flex items-center justify-center text-white font-semibold">
                    <%= user.display_name.first.upcase %>
                  </div>
                  <div>
                    <p class="text-white font-medium"><%= user.display_name %></p>
                    <p class="text-slate-400 text-sm"><%= user.email_address %></p>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4">
                <% plan = user.current_plan %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
                  <%= plan.free? ? "bg-slate-600 text-slate-200" : "bg-emerald-500/20 text-emerald-400" %>">
                  <%= plan.name %>
                </span>
              </td>
              <td class="px-6 py-4">
                <% if user.subscription.present? %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium
                    <%= user.subscription.active? ? "bg-green-500/20 text-green-400" : "bg-red-500/20 text-red-400" %>">
                    <%= user.subscription.status.titleize %>
                  </span>
                <% else %>
                  <span class="text-slate-500">—</span>
                <% end %>
              </td>
              <td class="px-6 py-4">
                <% if user.subscription.present? %>
                  <span class="text-slate-300"><%= user.subscription.billing_cycle.titleize %></span>
                <% else %>
                  <span class="text-slate-500">—</span>
                <% end %>
              </td>
              <td class="px-6 py-4">
                <% if user.subscription&.ends_at.present? %>
                  <span class="text-slate-300"><%= l(user.subscription.ends_at, format: :short) %></span>
                <% else %>
                  <span class="text-slate-500">—</span>
                <% end %>
              </td>
              <td class="px-6 py-4 text-right">
                <%= link_to t("admin.subscriptions.edit"), edit_admin_subscription_path(user), 
                    class: "text-emerald-400 hover:text-emerald-300 font-medium" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
