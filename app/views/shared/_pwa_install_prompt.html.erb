<%# PWA Install Prompt - shows on mobile devices when app is not installed %>
<div data-controller="pwa-install" 
     data-pwa-install-dismiss-days-value="7"
     data-pwa-install-show-delay-value="1500"
     class="hidden" 
     data-pwa-install-target="container">
  
  <%# Debug panel - only in development %>
  <% if Rails.env.development? %>
  <div data-pwa-install-target="debugPanel" class="hidden mb-3 p-3 bg-slate-800/80 border border-slate-600 rounded-xl text-xs font-mono">
    <div class="flex items-center justify-between mb-2">
      <span class="text-slate-300 font-semibold">PWA Debug</span>
      <button data-action="pwa-install#hideDebug" class="text-slate-500 hover:text-slate-300">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
    <div class="space-y-1">
      <div class="flex justify-between">
        <span class="text-slate-400">HTTPS:</span>
        <span data-pwa-install-target="debugHttps" class="text-slate-300">-</span>
      </div>
      <div class="flex justify-between">
        <span class="text-slate-400">Service Worker:</span>
        <span data-pwa-install-target="debugSw" class="text-slate-300">-</span>
      </div>
      <div class="flex justify-between">
        <span class="text-slate-400">Install Prompt:</span>
        <span data-pwa-install-target="debugPrompt" class="text-slate-300">-</span>
      </div>
      <div class="flex justify-between">
        <span class="text-slate-400">Is Installed:</span>
        <span data-pwa-install-target="debugInstalled" class="text-slate-300">-</span>
      </div>
      <div class="flex justify-between">
        <span class="text-slate-400">Platform:</span>
        <span data-pwa-install-target="debugPlatform" class="text-slate-300">-</span>
      </div>
    </div>
  </div>
  <% end %>
  <div class="bg-gradient-to-r from-emerald-500/10 to-teal-500/10 border border-emerald-500/30 rounded-2xl p-4 backdrop-blur-sm animate-fade-in">
    <div class="flex items-start gap-4">
      <div class="flex-shrink-0">
        <div class="w-12 h-12 bg-gradient-to-br from-emerald-500 to-teal-500 rounded-xl flex items-center justify-center shadow-lg shadow-emerald-500/20">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
          </svg>
        </div>
      </div>
      
      <div class="flex-1 min-w-0">
        <h3 class="text-sm font-semibold text-white mb-1">
          Install MedDir App
        </h3>
        <p class="text-xs text-slate-400 mb-3">
          Install on your device for quick access and offline support. Your medical documents, always available.
        </p>
        
        <%# Android / Chrome install button %>
        <div data-pwa-install-target="androidPrompt" class="flex items-center gap-2 flex-wrap">
          <button data-action="pwa-install#install"
                  data-pwa-install-target="button"
                  class="inline-flex items-center gap-2 px-3 py-1.5 bg-emerald-500 hover:bg-emerald-400 text-white text-xs font-medium rounded-lg transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
            </svg>
            Install App
          </button>
          
          <button data-action="pwa-install#dismiss"
                  class="text-xs text-slate-500 hover:text-slate-400 transition-colors">
            Maybe later
          </button>
          
          <% if Rails.env.development? %>
          <button data-action="pwa-install#toggleDebug"
                  class="text-xs text-blue-400 hover:text-blue-300 transition-colors ml-auto">
            Debug
          </button>
          <% end %>
        </div>

        <%# iOS Safari manual instructions %>
        <div data-pwa-install-target="iosInstructions" class="hidden">
          <div class="flex flex-col gap-2">
            <div class="flex items-center gap-2 text-xs text-slate-300">
              <span class="flex items-center justify-center w-5 h-5 bg-slate-700 rounded text-[10px] font-bold">1</span>
              <span>Tap the</span>
              <svg class="w-5 h-5 text-blue-400" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2l3 3h-2v6h-2V5H9l3-3zm-1 12v2h2v-2h-2zm0 4v2h2v-2h-2z"/>
                <path d="M4 12h2v8h12v-8h2v8a2 2 0 01-2 2H6a2 2 0 01-2-2v-8z"/>
              </svg>
              <span>Share button</span>
            </div>
            <div class="flex items-center gap-2 text-xs text-slate-300">
              <span class="flex items-center justify-center w-5 h-5 bg-slate-700 rounded text-[10px] font-bold">2</span>
              <span>Scroll and tap</span>
              <span class="text-emerald-400 font-medium">"Add to Home Screen"</span>
            </div>
          </div>
          <button data-action="pwa-install#dismiss"
                  class="mt-3 text-xs text-slate-500 hover:text-slate-400 transition-colors">
            Got it
          </button>
        </div>
      </div>
      
      <button data-action="pwa-install#dismiss" class="flex-shrink-0 text-slate-500 hover:text-slate-400">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>
</div>
