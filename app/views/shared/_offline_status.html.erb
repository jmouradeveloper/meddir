<%# Offline status indicator and banner %>
<div data-controller="connection-status" data-connection-status-show-banner-value="true">
  <%# Offline Banner - shown when offline %>
  <div data-connection-status-target="banner" class="hidden fixed top-0 left-0 right-0 z-50 bg-amber-500/90 backdrop-blur-sm">
    <div class="max-w-7xl mx-auto px-4 py-2 flex items-center justify-between">
      <div class="flex items-center gap-2">
        <svg class="w-5 h-5 text-amber-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                d="M18.364 5.636a9 9 0 010 12.728m0 0l-2.829-2.829m2.829 2.829L21 21M15.536 8.464a5 5 0 010 7.072m0 0l-2.829-2.829m-4.243 2.829a4.978 4.978 0 01-1.414-2.83m-1.414 5.658a9 9 0 01-2.167-9.238m7.824 2.167a1 1 0 111.414 1.414m-1.414-1.414L3 3m8.293 8.293l1.414 1.414" />
        </svg>
        <span class="text-sm font-medium text-amber-900">
          You're offline. Changes will sync when you're back online.
        </span>
      </div>
      <button data-action="connection-status#dismissBanner" class="text-amber-900 hover:text-amber-800">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>

  <%# Status Indicator - always visible in the header area %>
  <div class="fixed bottom-4 left-4 z-40 flex items-center gap-2 bg-slate-800/80 backdrop-blur-sm rounded-full px-3 py-2 shadow-lg border border-slate-700/50">
    <%# Connection indicator dot %>
    <div data-connection-status-target="indicator" 
         class="w-2.5 h-2.5 rounded-full bg-emerald-500"
         title="Online"></div>
    
    <%# Pending sync count badge %>
    <span data-connection-status-target="syncCount" 
          class="hidden bg-amber-500 text-amber-900 text-xs font-bold px-1.5 py-0.5 rounded-full min-w-[20px] text-center">
      0
    </span>
    
    <%# Sync button %>
    <button data-action="connection-status#syncNow" 
            class="text-slate-400 hover:text-emerald-400 transition-colors"
            title="Sync now">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
              d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
      </svg>
    </button>
    
    <%# Last sync time %>
    <span data-connection-status-target="lastSync" class="text-xs text-slate-500 hidden sm:inline"></span>
  </div>
</div>
