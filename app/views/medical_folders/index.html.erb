<%= render "shared/authenticated_layout" do %>
  <%= render Ui::ListPageHeaderComponent.new(
    title: "All Medical Folders",
    subtitle: "View and manage all your medical folders",
    action_text: "New Folder",
    action_href: new_medical_folder_path
  ) %>

  <% if @medical_folders.any? %>
    <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      <% @medical_folders.each do |folder| %>
        <%= render Features::FolderCardComponent.new(folder: folder) %>
      <% end %>
    </div>
  <% else %>
    <%= render Ui::EmptyStateComponent.new(
      title: "No folders yet",
      description: "Create your first medical folder to start organizing your documents.",
      icon: :folder,
      action_text: "Create Your First Folder",
      action_href: new_medical_folder_path
    ) %>
  <% end %>
<% end %>
