<%= render "shared/authenticated_layout" do %>
  <div class="mb-6">
    <%= link_to dashboard_path, class: "inline-flex items-center gap-2 text-slate-400 hover:text-white transition-colors" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Back to Dashboard
    <% end %>
  </div>

  <!-- Folder Header -->
  <div class="bg-slate-800/50 backdrop-blur-xl rounded-2xl border border-slate-700/50 p-6 mb-8">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div class="flex items-center gap-4">
        <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-<%= @medical_folder.specialty_color %>-500/20 to-<%= @medical_folder.specialty_color %>-600/20 flex items-center justify-center">
          <svg class="w-7 h-7 text-<%= @medical_folder.specialty_color %>-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
          </svg>
        </div>
        <div>
          <h1 class="text-2xl font-bold text-white"><%= @medical_folder.name %></h1>
          <p class="text-slate-400"><%= @medical_folder.specialty_name %></p>
        </div>
      </div>

      <div class="flex items-center gap-3">
        <%= link_to edit_medical_folder_path(@medical_folder), class: "flex items-center gap-2 px-4 py-2 bg-slate-700/50 hover:bg-slate-700 text-slate-300 hover:text-white rounded-xl transition-all" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
          Edit
        <% end %>

        <%= button_to medical_folder_path(@medical_folder), 
            method: :delete, 
            data: { turbo_confirm: "Are you sure you want to delete this folder and all its documents?" },
            class: "flex items-center gap-2 px-4 py-2 bg-red-500/10 hover:bg-red-500/20 text-red-400 hover:text-red-300 border border-red-500/30 rounded-xl transition-all" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
          Delete
        <% end %>
      </div>
    </div>

    <% if @medical_folder.description.present? %>
      <p class="mt-4 text-slate-400"><%= @medical_folder.description %></p>
    <% end %>
  </div>

  <div class="grid lg:grid-cols-3 gap-8">
    <!-- Documents Section -->
    <div class="lg:col-span-2">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-bold text-white">Documents (<%= @documents.count %>)</h2>
        <%= link_to new_medical_folder_document_path(@medical_folder), class: "flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-emerald-500 to-teal-500 hover:from-emerald-600 hover:to-teal-600 text-white font-semibold rounded-xl shadow-lg shadow-emerald-500/20 transform hover:scale-105 transition-all" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Upload Document
        <% end %>
      </div>

      <% if @documents.any? %>
        <div class="space-y-3">
          <% @documents.each do |document| %>
            <%= link_to medical_folder_document_path(@medical_folder, document), class: "group flex items-center gap-4 bg-slate-800/30 hover:bg-slate-800/60 border border-slate-700/50 rounded-xl p-4 transition-all" do %>
              <div class="w-12 h-12 rounded-lg bg-slate-700/50 flex items-center justify-center flex-shrink-0">
                <% if document.file_type == :pdf %>
                  <svg class="w-6 h-6 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                  </svg>
                <% else %>
                  <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                <% end %>
              </div>
              <div class="min-w-0 flex-1">
                <h3 class="text-white font-medium group-hover:text-emerald-400 transition-colors truncate"><%= document.title %></h3>
                <div class="flex items-center gap-3 text-sm text-slate-500">
                  <span><%= document.formatted_date %></span>
                  <% if document.file.attached? %>
                    <span>&bull;</span>
                    <span><%= document.file_size_mb %> MB</span>
                  <% end %>
                </div>
              </div>
              <svg class="w-5 h-5 text-slate-500 group-hover:text-emerald-400 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <div class="bg-slate-800/30 border border-slate-700/50 rounded-2xl p-12 text-center">
          <div class="w-16 h-16 rounded-2xl bg-slate-700/50 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-white mb-2">No documents yet</h3>
          <p class="text-slate-400 mb-6">Upload your first document to this folder.</p>
          <%= link_to new_medical_folder_document_path(@medical_folder), class: "inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-emerald-500 to-teal-500 hover:from-emerald-600 hover:to-teal-600 text-white font-semibold rounded-xl shadow-lg shadow-emerald-500/20 transition-all" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Upload First Document
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Sharing Section -->
    <div>
      <h2 class="text-xl font-bold text-white mb-6">Share This Folder</h2>
      
      <div class="bg-slate-800/50 backdrop-blur-xl rounded-2xl border border-slate-700/50 p-6">
        <p class="text-slate-400 text-sm mb-4">
          Generate a secure link to share this folder with healthcare providers. They can view documents without creating an account.
        </p>

        <%= form_with url: medical_folder_shareable_links_path(@medical_folder), class: "mb-6" do |form| %>
          <div class="mb-4">
            <%= form.label :expires_in, "Link Expiration", class: "block text-sm font-medium text-slate-300 mb-2" %>
            <%= form.select :expires_in,
                [["1 Day", "1_day"], ["7 Days", "7_days"], ["30 Days", "30_days"], ["Never", "never"]],
                {},
                class: "w-full px-4 py-3 bg-slate-900/50 border border-slate-600 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-all" %>
          </div>
          <%= form.submit "Generate Share Link",
              class: "w-full py-3 px-4 bg-gradient-to-r from-emerald-500 to-teal-500 hover:from-emerald-600 hover:to-teal-600 text-white font-semibold rounded-xl shadow-lg shadow-emerald-500/30 transform hover:scale-[1.02] transition-all cursor-pointer" %>
        <% end %>

        <% if @shareable_links.any? %>
          <div class="border-t border-slate-700/50 pt-4">
            <h3 class="text-sm font-medium text-slate-300 mb-3">Active Links</h3>
            <div class="space-y-3">
              <% @shareable_links.each do |link| %>
                <div class="bg-slate-900/50 rounded-xl p-3">
                  <div class="flex items-center justify-between mb-2">
                    <span class="text-xs text-slate-500"><%= link.formatted_expiration %></span>
                    <%= button_to medical_folder_shareable_link_path(@medical_folder, link),
                        method: :delete,
                        data: { turbo_confirm: "Revoke this share link?" },
                        class: "text-red-400 hover:text-red-300 text-xs transition-colors" do %>
                      Revoke
                    <% end %>
                  </div>
                  <div class="flex items-center gap-2">
                    <input type="text" 
                           value="<%= shared_folder_url(link.token) %>" 
                           readonly 
                           class="flex-1 px-3 py-2 bg-slate-800 border border-slate-600 rounded-lg text-white text-xs truncate"
                           data-controller="clipboard"
                           data-clipboard-target="source">
                    <button type="button"
                            data-action="clipboard#copy"
                            class="px-3 py-2 bg-slate-700 hover:bg-slate-600 text-white rounded-lg text-xs transition-colors">
                      Copy
                    </button>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

